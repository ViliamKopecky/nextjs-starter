{
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "commonjs"
		},
		"include": ["src/tests/**/*"]
	},
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"components/*": ["src/components/*"],
			"server/*": ["src/server/*"],
			"utils/*": ["src/utils/*"]
		},
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"sourceMap": true,
		"inlineSources": true,
		"sourceRoot": "/"
	},
	"exclude": ["node_modules"],
	"include": ["@types/**/*", "next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"]
}
