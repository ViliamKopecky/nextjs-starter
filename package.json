{
	"private": true,
	"name": "next-boilerplate",
	"version": "0.1.0",
	"scripts": {
		"build": "cross-env TZ=UTC next build && cross-env TZ=UTC tsc --project tsconfig.server.json",
		"ci": "npm run lint && npm run test && npm run build",
		"dev": "nodemon",
		"lint": "eslint 'src/**/*.{js,ts,tsx,json}' '*.{js,ts,tsx,json}' '.storybook/**/*.{js,ts,tsx,json}'",
		"lint:fix": "npm run lint -- --fix",
		"ts": "tsc --project . && tsc --project tsconfig.server.json",
		"start": "cross-env TZ=UTC NODE_ENV=production node dist/index.js",
		"test": "uvu -r ts-node/register src/tests",
		"storybook": "start-storybook --ci -p 6006 -c .storybook"
	},
	"dependencies": {
		"eslint-plugin-react": "7.21.2",
		"eslint-plugin-react-hooks": "4.1.2",
		"next": "9.5.3",
		"nodemon": "^2.0.4",
		"react": "16.13.1",
		"react-dom": "16.13.1"
	},
	"devDependencies": {
		"@babel/core": "^7.11.6",
		"@storybook/preset-typescript": "^3.0.0",
		"@storybook/react": "^6.0.22",
		"@types/node": "14.11.2",
		"@types/react": "16.9.49",
		"@typescript-eslint/eslint-plugin": "4.3.0",
		"@typescript-eslint/parser": "4.3.0",
		"babel-loader": "^8.1.0",
		"babel-preset-react-app": "^9.1.2",
		"cross-env": "^7.0.2",
		"css-loader": "^4.3.0",
		"eslint": "7.10.0",
		"eslint-config-prettier": "6.12.0",
		"eslint-plugin-prettier": "^3.1.4",
		"prettier": "2.1.2",
		"sass": "^1.26.11",
		"sass-loader": "^10.0.2",
		"style-loader": "^1.2.1",
		"ts-node": "9.0.0",
		"typescript": "4.0.3",
		"uvu": "0.3.3"
	}
}
