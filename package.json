{
	"private": true,
	"name": "next-boilerplate",
	"version": "0.1.0",
	"scripts": {
		"build": "cross-env TZ=UTC next build && cross-env TZ=UTC tsc --project tsconfig.server.json",
		"ci": "npm run lint && npm run test && npm run build",
		"dev": "nodemon",
		"lint": "eslint 'src/*/**/*.{js,ts,tsx,json}' '*.{js,ts,tsx,json}'",
		"lint:fix": "npm run lint -- --fix",
		"start": "cross-env TZ=UTC NODE_ENV=production node dist/index.js",
		"test": "uvu -r ts-node/register src/tests"
	},
	"dependencies": {
		"eslint-plugin-react": "^7.20.3",
		"eslint-plugin-react-hooks": "^4.0.8",
		"next": "9.4.4",
		"nodemon": "^2.0.4",
		"react": "16.13.1",
		"react-dom": "16.13.1"
	},
	"devDependencies": {
		"@types/node": "^14.0.23",
		"@types/react": "^16.9.43",
		"@typescript-eslint/eslint-plugin": "^3.6.1",
		"@typescript-eslint/parser": "^3.6.1",
		"cross-env": "^7.0.2",
		"eslint": "^7.5.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"prettier": "^2.0.5",
		"ts-node": "^8.10.2",
		"typescript": "^3.9.7",
		"uvu": "^0.2.3"
	}
}
